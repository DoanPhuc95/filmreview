<div class="login-form-box">
  <h2 class="text-center"><%= t("log_in")%></h2>    
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
    <div class="field">
      <%= f.label t("email") %><br />
      <%= f.email_field :email, autofocus: true, class: "login-field form-control" %>
    </div>  
    
    <div class="field">
      <%= f.label t("password") %><br />
      <%= f.password_field :password, autocomplete: "off", :class => "login-field form-control" %>
    </div>
    
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label t("remember_me") %>
      </div>
    <% end -%>
    
    <div class="actions">
      <%= f.submit t("log_in"), class: "login-button" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
