<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>
<div class="login-form-box">
  <h2 class="text-center"><%= t("sign_up") %></h2>
  
  <%= form_for(resource, as: resource_name, class: 'login-form' ,url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label t("email") %><br />
      <%= f.email_field :email, autofocus: true, class: "login-field form-control" %>
    </div>
    
    <div class="field">
      <%= f.label t("name") %><br/>
      <%= f.text_field :name, class: "login-field form-control" %>
    </div>

    <div class="field">
      <%= f.label t("gender") %><br/>
      <%= f.select(:gender, [t('male'),t('female'), "Gay", "Les"], {}, class: "form-control")%>
    </div>
    
    <div class="field">
      <%= f.label t("password") %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t("min_lenght") %>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "login-field form-control" %>
    </div>

  <div class="field">
    <%= f.label t("password_confirmation") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "login-field form-control" %>
  </div>

  <div class="actions">
    <%= f.submit t("sign_up"), class: "login-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  
  
</div>
