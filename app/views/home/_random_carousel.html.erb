<div id="carousel-simple" class="carousel multi-item-carousel slide" data-ride="carousel">
  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <% movies.each.with_index do |movie, index| %>
        <% if index == 0 %>
            <div class="item active">
              <div class="col-md-4">
                  <%= link_to movie do %>
                    <%= image_tag movie.image, class: "img-responsive img-slide" %>
                    <h4 class="text-center"><%= read_more movie.name %></h4>
                  <% end %>
              </div>
            </div>
        <% else %>
            <div class="item">
              <div class="col-md-4">
                  <%= link_to movie do %>
                      <%= image_tag movie.image, class: "img-responsive img-slide" %>
                      <h4 class="text-center"><%= read_more movie.name %></h4>
                  <% end %>
              </div>
            </div>        
        <% end %>
    <% end %>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#carousel-simple" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-simple" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>