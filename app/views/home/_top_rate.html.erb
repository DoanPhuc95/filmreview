<div class="col-lg-3 col-md-4 col-xs-6 thumb" style="margin-top: 20px; height: 300px">
  <div class="thumbnail" style="background-color: #2a3b46; height: 100%">
    <%= link_to item[0] do %>
      <div style="height: 60%; width: 100%">
        <% if item[0].image.nil? %>
          <%= image_tag "http://placehold.it/400x300", class: "img-responsive" %>
        <% else %>
          <%= image_tag item[0].image, class: "img-responsive" %>
        <% end %>
      </div>
    <% end %>
    <div class="item-description">
      <%= link_to item[0] do %>
        <p class="item-name"><%= item[0].name %></p>
      <% end %>
      <p class="item-detail-review"><%= pluralize comments_count(item[0]), "Comment" %></p>
      <p class="homepage-star">
        <% if item[1] <= 1.5 %>
          <%= number_with_precision(item[1], precision: 1) %> '★☆☆☆☆'
        <% elsif item[1] <= 2.5 %>
          <%= number_with_precision(item[1], precision: 1) %> '★★☆☆☆'
        <% elsif item[1] <= 3.5 %>
          <%= number_with_precision(item[1], precision: 1) %> '★★★☆☆'
        <% elsif item[1] <= 4.5 %>
          <%= number_with_precision(item[1], precision: 1) %> '★★★★☆'
        <% else %>
          <%= number_with_precision(item[1], precision: 1) %> '★★★★★'
        <% end %>
      </p>
    </div>
  </div>
</div>