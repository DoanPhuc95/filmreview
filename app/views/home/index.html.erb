<%= render "home/random_carousel", movies: @random_movie %>

<div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
          <%= link_to 'Top Ratings', top_index_path(act: "Top Ratings") %>
      </h1>
      <% @top_rate.each do |t| %>
          <%= render 'home/top_rate', item: t %>
      <% end %>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <%= link_to 'Top Newest', top_index_path(act: "Top Newest") %>
        </h1>
        <% @top_newest.each do |t| %>
            <%= render 'home/top_newest', item: t %>
        <% end %>
    </div>
</div>