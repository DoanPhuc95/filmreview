<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= link_to "All movies", movie_index_path %> > <%= get_category @category_value.to_i %></h1>
        <% @category.each do |t| %>
          <div class="col-lg-3 col-md-4 col-xs-6 thumb" style="margin-top: 20px; height: 300px">
              <div class="thumbnail" style="background-color: #2a3b46; height: 100%">
                <%= link_to get_movies t do %>
                  <div style="height: 60%; width: 100%">
                    <% if get_movies(t).image.nil? %>
                      <%= image_tag "http://placehold.it/400x300", class: "img-responsive" %>
                    <% else %>
                      <%= image_tag get_movies(t).image, class: "img-responsive" %>
                    <% end %>
                  </div>
                <% end %>
                <div class="item-description">
                  <%= link_to get_movies(t) do %>
                    <p class="item-name"><%= get_movies(t).name %></p>
                  <% end %>
                  <p class="item-detail-review"><%= pluralize comments_count(get_movies(t)), "Comment" %></p>
                </div>
              </div>
          </div>
        <% end %>
    </div>
</div>

<div class="text-center paginate-bar"><%= paginate @category, theme: 'twitter-bootstrap-3' %></div>